{
  "name": "@claude-flow/plugin-hyperbolic-reasoning",
  "version": "3.0.0-alpha.1",
  "description": "Hyperbolic reasoning plugin providing Poincare ball embeddings, taxonomic reasoning, hierarchical search, and entailment graphs for superior hierarchical understanding.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tools": {
      "import": "./dist/mcp-tools.js",
      "types": "./dist/mcp-tools.d.ts"
    },
    "./bridges/hyperbolic": {
      "import": "./dist/bridges/hyperbolic-bridge.js",
      "types": "./dist/bridges/hyperbolic-bridge.d.ts"
    },
    "./bridges/gnn": {
      "import": "./dist/bridges/gnn-bridge.js",
      "types": "./dist/bridges/gnn-bridge.d.ts"
    },
    "./bridges": {
      "import": "./dist/bridges/index.js",
      "types": "./dist/bridges/index.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist",
    "plugin.yaml",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run clean && npm run build && npm run typecheck"
  },
  "publishConfig": {
    "access": "public",
    "tag": "v3alpha"
  },
  "keywords": [
    "claude-flow",
    "plugin",
    "hyperbolic",
    "poincare",
    "taxonomy",
    "hierarchy",
    "embeddings",
    "entailment",
    "gnn",
    "mcp"
  ],
  "author": "rUv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruvnet/claude-flow.git",
    "directory": "v3/plugins/hyperbolic-reasoning"
  },
  "bugs": {
    "url": "https://github.com/ruvnet/claude-flow/issues"
  },
  "homepage": "https://github.com/ruvnet/claude-flow/tree/main/v3/plugins/hyperbolic-reasoning#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "peerDependencies": {
    "@claude-flow/ruvector-upstream": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@claude-flow/ruvector-upstream": {
      "optional": true
    }
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  },
  "optionalDependencies": {
    "@ruvector/hyperbolic-hnsw-wasm": "^0.1.0",
    "@ruvector/attention-wasm": "^0.1.0",
    "@ruvector/gnn-wasm": "^0.1.0",
    "@ruvector/sona": "^0.1.0"
  }
}
